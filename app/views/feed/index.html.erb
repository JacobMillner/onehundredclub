<div class="container">
  <div class="row mt-2">
    <%= link_to posts_path, class: "btn btn-lg btn-primary", :method => :post do %>
      Post! <i class="em em-100"></i>
    <% end %>
  </div>
</div>
<div class="container">
  <% @Feed.each do |post| %>
      <div class="col-md-8  toppad col-md-offset-2 ">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title"><%= link_to post.user.username, user_path(:id => post.user.id) %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                <div class="profile-header-container">
                <div class="profile-header-img">
                  <%= image_tag gravatar_url(post.user.email, 128), alt: "User Pic", class: "img-circle" %> </div>
            <div class="rank-label-container">
              <span class="label label-default rank-label">100 points</span>
            </div>
                </div>
                </div>
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td><%= post.created_at.strftime("%D %H:%M") %></td>
                      </tr>
                      <tr>
                        <td><H1><i class="em em-100"></i></H1></td>
                      </tr>
                    </tbody>
                  </table>

                </div>
              </div>
            </div>
        </div>
      </div>
  <% end %>


</div>
