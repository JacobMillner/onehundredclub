<!DOCTYPE html>
<html>
<head>
  <title>Onehundredclub</title> 
<%= javascript_include_tag 'signin' %> 
<%= stylesheet_link_tag 'signin', media: 'all' %>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">

  <%= csrf_meta_tags %>
</head>
<body>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

<%= devise_error_messages! %>
<center><h1>ðŸ’¯ CLUB</h1></center>

<div class="testbox">
  <h1>Registration</h1>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <label id="icon" for="name"><i class="icon-envelope "></i></label>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    <label id="icon" for="name"><i class="icon-user"></i></label>
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
    <label id="icon" for="name"><i class="icon-shield"></i></label>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    <label id="icon" for="name"><i class="icon-shield"></i></label>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
     <p>By clicking Register, you agree on our <a href="#">terms and condition</a>.</p>
     <%= f.submit "Register" %>
  <% end %>
</div>
<%= render "devise/shared/links" %>

</body>
</html>


